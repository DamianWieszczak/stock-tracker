<div class="results-block">
  <%= render 'layouts/messages' %>
</div>

<% if @friends %>
  <div class="card card-header results-block">
    <table class="col-md-12">
      <tbody>
        <% @friends.each do |friend| %>
          <tr>
            <td><strong>Name: </strong> <%= friend.full_name %></td>
            <td><strong>Email: </strong> <%= friend.email %></td>
            <td><strong>Actions: </strong> <%= link_to "View Profile", user_path(friend), class: "btn-sm btn-info" %>
              <% if current_user.not_friends_with?(friend.id) %>
                <%= link_to "Add to Friend", friendships_path(friend: friend),  class: "btn-sm btn-success ml-2", method: :post %>
              <% else %>
                <span class="ml-2 badge badge-info">
                You are friends
              <% end %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
<% end %>