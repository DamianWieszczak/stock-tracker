<h1 class="mt-4 mb-4">My Friends List</h1>

<div class='search-area'>
  <h3>Friend Finder</h3>
  <%= form_tag find_friend_path, remote: true, method: :get do %>
    <div class="form-group row">
      <div class="col-sm-7">
        <%= text_field_tag :friend, params[:friend], placeholder: "Stock symbol", autofocus: true, class: "form-control form-control-lg" %>
      </div>
      <div class="col-sm-3">
        <%= button_tag type: :submit, class: "btn btn-info btn-lg" do %>
          <%= fa_icon "search" %>
        <% end %>
      </div>
    </div>
  <% end %>
</div>

<% if !@friends.empty? %>
  <%= render 'friends/list' %>
<% end %>